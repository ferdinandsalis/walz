    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.17.19",
    "@types/ramda": "^0.30.2",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@types/slug": "^5.0.9",
